@using Screen.Vc.Extensions;
@using Screen.Vc.WebRole.Source;

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div id="notify-container" class="notify-container"></div>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionImage("Index", ControllerNames.Entrepreneur, "~/Images/ScreenVcLogo.png", "LogoImage here")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("~/Views/Entrepreneur/_EntrepreneurLoginPartial.cshtml")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Entrepreneur", Actions.Index, ControllerNames.Entrepreneur)</li>
                            @if (Request.IsAuthenticated)
                            {
                                <li>
                                @Html.ActionLink("My Profile", UserProfileActions.UserProfileAjax, ControllerNames.Entrepreneur)</li>
                                
                                <li>
                                @Html.ActionLink("Companies", Actions.Index, ControllerNames.Company)</li>
                            }
                            <li>@Html.ActionLink("About Us", Actions.About, "Home")</li>
                            <li>@Html.ActionLink("Contact Us", Actions.Contact, "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
            @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Screen.Vc.</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

</body>
</html>
